{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://skills-registry.local/spec/workflow.schema.json",
  "title": "Workflow Skill Contract",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "workflow_id",
    "steps",
    "input_bindings",
    "output_bindings",
    "fallback_policy"
  ],
  "properties": {
    "workflow_id": { "type": "string", "minLength": 3 },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "uses_skill", "purpose"],
        "properties": {
          "id": { "type": "string" },
          "uses_skill": { "type": "string" },
          "purpose": { "type": "string" }
        }
      }
    },
    "input_bindings": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": { "type": "string" }
    },
    "output_bindings": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": { "type": "string" }
    },
    "fallback_policy": {
      "type": "object",
      "additionalProperties": false,
      "required": ["on_step_failure", "escalation"],
      "properties": {
        "on_step_failure": { "type": "string" },
        "escalation": { "type": "string" }
      }
    }
  }
}
